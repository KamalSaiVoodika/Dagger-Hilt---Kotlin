<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?selectableItemBackground"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardElevation="@dimen/_4sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/llt_left"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_toLeftOf="@+id/llt_right"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_title"
                        style="@style/MediumTextBold"
                        android:text="WLAN Card"
                        android:textColor="@color/colorIndigoBlack" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:orientation="horizontal">

                        <com.google.android.material.textview.MaterialTextView
                            style="@style/VerySmallTextBold"
                            android:layout_gravity="right"
                            android:text="Quantity : "
                            android:textColor="@color/colorFullGrayDark" />

                        <com.google.android.material.textview.MaterialTextView
                            style="@style/VerySmallTextBold"
                            android:layout_gravity="right"
                            android:text="1800"
                            android:textColor="@color/colorFullGrayDark" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.textview.MaterialTextView
                            style="@style/VerySmallTextBold"
                            android:layout_gravity="right"
                            android:text="Discount percentage and value : "
                            android:textColor="@color/colorFullGrayDark" />

                        <com.google.android.material.textview.MaterialTextView
                            style="@style/VerySmallTextBold"
                            android:layout_gravity="right"
                            android:text="1800"
                            android:textColor="@color/colorFullGrayDark" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:orientation="horizontal">

                        <com.google.android.material.textview.MaterialTextView
                            style="@style/VerySmallTextBold"
                            android:layout_gravity="right"
                            android:text="Price after discount :  "
                            android:textColor="@color/colorFullGrayDark" />

                        <com.google.android.material.textview.MaterialTextView
                            style="@style/VerySmallTextBold"
                            android:layout_gravity="right"
                            android:text="1800"
                            android:textColor="@color/colorFullGrayDark" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:orientation="horizontal">

                        <com.google.android.material.textview.MaterialTextView
                            style="@style/VerySmallTextBold"
                            android:layout_gravity="right"
                            android:text="Tax percentage value :  "
                            android:textColor="@color/colorFullGrayDark" />

                        <com.google.android.material.textview.MaterialTextView
                            style="@style/VerySmallTextBold"
                            android:layout_gravity="right"
                            android:text="1800"
                            android:textColor="@color/colorFullGrayDark" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llt_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:gravity="end"
                    android:orientation="vertical">

                    <com.google.android.material.textview.MaterialTextView
                        style="@style/VerySmallTextBold"
                        android:layout_gravity="end"
                        android:text="12344"
                        android:textColor="@color/colorFullGrayDark" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:orientation="horizontal">

                        <com.google.android.material.textview.MaterialTextView
                            style="@style/VerySmallTextBold"
                            android:layout_gravity="right"
                            android:text="@string/unit_price"
                            android:textColor="@color/colorFullGrayDark" />

                        <com.google.android.material.textview.MaterialTextView
                            style="@style/VerySmallTextBold"
                            android:layout_gravity="right"
                            android:text="1600"
                            android:textColor="@color/colorFullGrayDark" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:orientation="horizontal">

                        <com.google.android.material.textview.MaterialTextView
                            style="@style/VerySmallTextBold"
                            android:layout_gravity="right"
                            android:text="Base Total : "
                            android:textColor="@color/colorFullGrayDark" />

                        <com.google.android.material.textview.MaterialTextView
                            style="@style/VerySmallTextBold"
                            android:layout_gravity="right"
                            android:text="1800"
                            android:textColor="@color/colorFullGrayDark" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|end"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:gravity="bottom|end"
                        android:orientation="horizontal">

                        <com.google.android.material.textview.MaterialTextView
                            style="@style/MediumTextBold"
                            android:layout_gravity="right"
                            android:text="Total : "
                            android:textColor="@color/colorIndigoBlack" />

                        <com.google.android.material.textview.MaterialTextView
                            style="@style/MediumTextBold"
                            android:layout_gravity="right"
                            android:text="1800$"
                            android:textColor="@color/colorIndigoBlack" />
                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</layout>